{
  "name": "@BRIXA/database",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/src/index.js",
  "types": "./src/index.ts",
  "files": [
    "dist",
    "prisma/schema.prisma"
  ],
  "scripts": {
    "build": "prisma generate && tsc",
    "dev": "prisma generate --watch",
    "prisma": "prisma",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:seed": "pnpm run seed:run",
    "seed:run": "tsx prisma/seed.ts"
  },
  "devDependencies": {
    "@BRIXA/typescript-config": "workspace:*",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.15.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "dotenv": "^17.2.3",
    "pg": "^8.16.3",
    "prisma": "^7.0.0"
  },
  "prisma": {
    "seed": "pnpm run seed:run"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/src/index.js"
    }
  }
}