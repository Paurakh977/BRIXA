# Docker Compose Environment Variables Template
# Copy this file to .env at the root of the project
# Docker Compose automatically loads .env from the same directory as docker-compose.yml
#
# Usage: cp env.docker.template .env
# Then edit .env with your actual values

# Database Configuration
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_DB=brixa
POSTGRES_PORT=5432

# Database Connection URL (for apps)
# NOTE: In Docker, use 'brixa-db' as the hostname (service name)
# For local development, use 'localhost'
# This is automatically constructed in docker-compose.yml, but you can override it
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
# DATABASE_URL=postgresql://admin:admin@brixa-db:5432/brixa?schema=public

# API Configuration
API_PORT=8000
API_URL=http://localhost:8000
NODE_ENV=production

# Web Configuration
WEB_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8000
INTERNAL_API_URL=http://api:8000

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars_12345
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production_min_32_chars_12345
JWT_ACCESS_EXPIRATION=10m
JWT_REFRESH_EXPIRATION=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
API_KEY=your_api_key_here_change_in_production
BCRYPT_ROUNDS=10
SESSION_SECRET=your_session_secret_change_this_in_production_12345

# Logging
LOG_LEVEL=debug

# PgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@admin.com
PGADMIN_DEFAULT_PASSWORD=admin
PGADMIN_PORT=5050

# ============================================
# Cache Configuration
# ============================================
# User cache TTL in milliseconds (default: 5 minutes = 300000)
CACHE_TTL_MS=300000

# Cache cleanup interval in milliseconds (default: 10 minutes = 600000)
CACHE_CLEANUP_INTERVAL_MS=600000

# ============================================
# Cookie Configuration
# ============================================
# Access token cookie max age in milliseconds (default: 15 minutes = 900000)
COOKIE_ACCESS_TOKEN_MAX_AGE_MS=900000

# Refresh token cookie max age in milliseconds (default: 7 days = 604800000)
COOKIE_REFRESH_TOKEN_MAX_AGE_MS=604800000

# ============================================
# Security Headers Configuration
# ============================================
# HSTS max age in seconds (default: 1 year = 31536000)
HSTS_MAX_AGE=31536000

# CORS max age in seconds (default: 1 day = 86400)
CORS_MAX_AGE=86400