NODE_ENV=development
APP_PORT=8000
APP_URL=http://localhost:8000

# Database
DATABASE_URL="postgresql://admin:admin@localhost:5432/brixa?schema=public"

JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production_min_32_chars
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

CORS_ORIGIN=http://localhost:3000

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

API_KEY=your_api_key_here_change_in_production

BCRYPT_ROUNDS=10
SESSION_SECRET=your_session_secret_change_this_in_production

LOG_LEVEL=debug


# ============================================
# Cache Configuration
# ============================================
# User cache TTL in milliseconds (default: 5 minutes = 300000)
CACHE_TTL_MS=300000
DB_VALIDATION_INTERVAL_MS=60000


# Cache cleanup interval in milliseconds (default: 10 minutes = 600000)
CACHE_CLEANUP_INTERVAL_MS=600000

# ============================================
# Cookie Configuration
# ============================================
# Access token cookie max age in milliseconds (default: 15 minutes = 900000)
COOKIE_ACCESS_TOKEN_MAX_AGE_MS=900000

# Refresh token cookie max age in milliseconds (default: 7 days = 604800000)
COOKIE_REFRESH_TOKEN_MAX_AGE_MS=604800000

# ============================================
# Security Headers Configuration
# ============================================
# HSTS max age in seconds (default: 1 year = 31536000)
HSTS_MAX_AGE=31536000

# CORS max age in seconds (default: 1 day = 86400)
CORS_MAX_AGE=86400

